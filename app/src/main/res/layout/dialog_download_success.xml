<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="16dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <!-- Success Animation -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_success"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="20dp"
            app:lottie_rawRes="@raw/success_animation"
            app:lottie_autoPlay="true"
            app:lottie_loop="false" />

        <!-- Success Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download Complete!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Success Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your addon is ready to install"
            android:textSize="14sp"
            android:textColor="#666666"
            android:textAlignment="center"
            android:layout_marginBottom="16dp" />

        <!-- File Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#F8F9FA"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- File Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_file"
                        android:tint="@color/purple_500"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tv_success_file_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ModernFurniture-Addons.zip"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A" />

                </LinearLayout>

                <!-- File Path -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_folder"
                        android:tint="#666666"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tv_file_path"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="/storage/emulated/0/Download/Italian Brain Rot/"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:textIsSelectable="true"
                        android:maxLines="2"
                        android:ellipsize="middle" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_open_folder"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Open Folder"
                android:textColor="@color/purple_500"
                android:textAllCaps="false"
                app:strokeColor="@color/purple_500"
                app:cornerRadius="16dp"
                android:drawableLeft="@drawable/ic_folder"
                android:drawableTint="@color/purple_500"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_install_addon"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Install Now"
                android:textAllCaps="false"
                android:backgroundTint="@color/purple_500"
                app:cornerRadius="16dp"
                android:drawableLeft="@drawable/ic_install"
                android:drawableTint="@color/white"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />

        </LinearLayout>

        <!-- Close Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_close_success"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textColor="#888888"
            android:textAllCaps="false" />

    </LinearLayout>

</androidx.cardview.widget.CardView>